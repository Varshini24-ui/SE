{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "babel-jest": "^29.3.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jest": "^29.3.0",
    "jest-environment-jsdom": "^29.3.0",
    "identity-obj-proxy": "^3.0.0",
    "cypress": "^13.0.0",
    "@cypress/webpack-dev-server": "^1.8.4",
    "eslint": "^8.40.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^2.8.8",
    "codecov": "^3.8.3",
    "wait-on": "^6.0.1",
    "start-server-and-test": "^2.0.3",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:performance": "jest test/performance --testTimeout=30000",
    "test:security": "jest test/security",
    "test:accessibility": "jest test/accessibility",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:all": "jest --coverage && npm run cypress:run",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:headless": "cypress run --headless --browser chrome",
    "cypress:chrome": "cypress run --browser chrome",
    "cypress:firefox": "cypress run --browser firefox",
    "cypress:edge": "cypress run --browser edge",
    "test:e2e": "start-server-and-test start http://localhost:3000 cypress:run",
    "test:e2e:open": "start-server-and-test start http://localhost:3000 cypress:open",
    "test:e2e:headless": "start-server-and-test start http://localhost:3000 cypress:headless",
    "test:e2e:chrome": "start-server-and-test start http://localhost:3000 cypress:chrome",
    "test:e2e:ci": "start-server-and-test start http://localhost:3000 'cypress run --record'",
    "test:full": "npm run test:coverage && npm run test:e2e",
    "cypress:verify": "cypress verify",
    "cypress:info": "cypress info",
    "cypress:version": "cypress version",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/ test/ cypress/",
    "format:check": "prettier --check src/ test/ cypress/",
    "coverage:report": "open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "clean": "rm -rf node_modules cypress/videos cypress/screenshots coverage",
    "clean:cypress": "rm -rf cypress/videos cypress/screenshots",
    "postinstall": "cypress verify || echo 'Cypress verification failed'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThresholds": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}